<Window x:Class="Jordan.MiniBicks.UI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jordan.MiniBicks.UI"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="350">
    <Grid>
        <StackPanel>
            <TextBlock TextAlignment="Center" FontSize="25" Text="Login" Margin="0 10 0 0"/>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Vertical" Width="200" Margin="0 80 0 0">
                    <TextBox x:Name="Username" HorizontalContentAlignment="Center" Height="40" FontSize="18"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="200" Margin="0 10">
                    <PasswordBox x:Name="Password" Height="40" HorizontalContentAlignment="Center" FontSize="18"/>
                </StackPanel>
                <Button Width="200" Height="30" Margin="0 20 0 70" Content="Se connecter" Click="Login_OnClick" Background="#FB8C00" BorderBrush="Transparent"/>
            </StackPanel>
    </Grid>
</Window>
